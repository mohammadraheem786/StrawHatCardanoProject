{
  "name": "strawhat-cardano-defi",
  "version": "1.0.0",
  "description": "A decentralized finance platform built on Cardano blockchain - IndiaCodex Hackathon 2024",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:contracts && npm run test:frontend && npm run test:backend",
    "test:contracts": "cd contracts && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "deploy:contracts": "cd contracts && npm run deploy",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../contracts && npm install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohammadraheem786/StrawHatCardanoProject.git"
  },
  "keywords": [
    "cardano",
    "defi",
    "blockchain",
    "plutus",
    "nft",
    "staking",
    "yield-farming",
    "hackathon",
    "indiacodex"
  ],
  "author": "Team StrawHat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mohammadraheem786/StrawHatCardanoProject/issues"
  },
  "homepage": "https://github.com/mohammadraheem786/StrawHatCardanoProject#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}