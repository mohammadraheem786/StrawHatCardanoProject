# Environment Configuration for StrawHat DeFi Platform

# Backend Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/strawhat-defi
DATABASE_NAME=strawhat-defi

# Cardano Network Configuration
CARDANO_NETWORK=testnet
CARDANO_CLI_PATH=/usr/local/bin/cardano-cli
BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here

# Smart Contract Addresses (Update after deployment)
STAKING_CONTRACT_ADDRESS=
LENDING_CONTRACT_ADDRESS=
NFT_MARKETPLACE_CONTRACT_ADDRESS=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_NAME=StrawHat DeFi Platform

# Third-party APIs
COINGECKO_API_URL=https://api.coingecko.com/api/v3
CARDANO_EXPLORER_API=https://cardano-testnet.blockfrost.io/api/v0

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Security Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
API_RATE_LIMIT=100

# Feature Flags
ENABLE_NFT_STAKING=true
ENABLE_CROSS_CHAIN_BRIDGE=false
ENABLE_GOVERNANCE=true